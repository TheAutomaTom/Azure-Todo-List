{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "AdvWorksProductsTable",
						"type": "DatasetReference"
					},
					"name": "AdvWorksProductStream"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "advWorksProductExport",
						"type": "DatasetReference"
					},
					"name": "ProductsWithMarkup"
				}
			],
			"transformations": [
				{
					"name": "CalculatedMarkup"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ProductID as integer,",
				"          Name as string,",
				"          ProductNumber as string,",
				"          Color as string,",
				"          StandardCost as decimal(19,4),",
				"          ListPrice as decimal(19,4),",
				"          Size as string,",
				"          Weight as decimal(8,2),",
				"          ProductCategoryID as integer,",
				"          ProductModelID as integer,",
				"          SellStartDate as timestamp,",
				"          SellEndDate as timestamp,",
				"          DiscontinuedDate as timestamp,",
				"          ThumbNailPhoto as binary,",
				"          ThumbnailPhotoFileName as string,",
				"          rowguid as string,",
				"          ModifiedDate as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> AdvWorksProductStream",
				"AdvWorksProductStream derive(Markup = ListPrice/StandardCost) ~> CalculatedMarkup",
				"CalculatedMarkup sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:[(\"products-{currentDate('yyyyMMddss')}\")],",
				"     truncate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          ProductID,",
				"          Name,",
				"          ProductNumber,",
				"          Color,",
				"          StandardCost,",
				"          ListPrice,",
				"          Size,",
				"          Weight,",
				"          ProductCategoryID,",
				"          ProductModelID,",
				"          SellStartDate,",
				"          SellEndDate,",
				"          DiscontinuedDate,",
				"          rowguid,",
				"          ModifiedDate,",
				"          Markup",
				"     ),",
				"     partitionBy('hash', 1)) ~> ProductsWithMarkup"
			]
		}
	}
}